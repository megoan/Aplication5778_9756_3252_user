<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#80426ef4"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingLeft="8dp">
                <TextView
                    android:id="@+id/nameinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferrari"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/modelinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <View
                android:padding="80dp"
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#c0c0c0"
                android:clickable="false"
                android:longClickable="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/carimageView"
                            android:layout_width="220dp"
                            android:layout_height="130dp"
                            android:clickable="false"
                            android:transitionName="branchImage"
                            app:srcCompat="@drawable/ferrari_812" />

                        <ProgressBar
                            android:id="@+id/downloadProgressBarCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/mileagetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@android:color/white"
                                android:text="Mileage:" />

                            <TextView
                                android:id="@+id/mileageinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="65195"
                                android:maxLines="1"
                                android:textColor="@color/buttonClickedLightBlue" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/onekilometercosttext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@android:color/white"
                                android:text="Kilometer cost:" />

                            <TextView
                                android:id="@+id/onekilometercostinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="330000.3"
                                android:maxLines="1"
                                android:textColor="@color/buttonClickedLightBlue" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/onedaycosttext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Day cost:"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:id="@+id/onedaycostinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="334"
                                android:maxLines="1"
                                android:textColor="@color/buttonClickedLightBlue" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/yeartext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Year:"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:id="@+id/yearinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="2018"
                                android:maxLines="1"
                                android:textColor="@color/buttonClickedLightBlue" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <RatingBar
                                android:id="@+id/carCardratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:longClickable="false"
                                android:numStars="5"
                                android:rating="3.5"
                                android:stepSize="0.5"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/carCardRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"

                                android:clickable="false"
                                android:longClickable="false"
                                android:text="3.5"
                                android:textColor="@color/buttonClickedLightBlue" />

                            <TextView
                                android:id="@+id/carCardNumberOfRatings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/transbuttonClickedLightBlue"
                                android:clickable="false"
                                android:longClickable="false"
                                android:text="(51)" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                </LinearLayout>
            </LinearLayout>
            <View
                android:padding="80dp"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#c0c0c0"
                android:clickable="false"
                android:longClickable="false" />

            <LinearLayout
                android:id="@+id/expandableView"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/passengerstext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@android:color/white"
                                android:text="Passengers:" />

                            <TextView
                                android:id="@+id/passengersinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="3344"
                                android:textColor="@color/buttonClickedLightBlue" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/luggagetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@android:color/white"
                                android:text="luggage:" />

                            <TextView
                                android:id="@+id/luggageinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="334"
                                android:textColor="@color/buttonClickedLightBlue" />


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/engineDisplacementtext"
                                android:textColor="@android:color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Engine:" />

                            <TextView
                                android:id="@+id/engineDisplacementinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="65195"
                                android:textColor="@color/buttonClickedLightBlue" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/transmissiontext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@android:color/white"
                                android:text="Transmission:" />

                            <TextView
                                android:id="@+id/transmissioninfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="333"
                                android:textColor="@color/buttonClickedLightBlue" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/actext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="@android:color/white"
                            android:text="AC:" />

                        <TextView
                            android:id="@+id/acinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="Yes"
                            android:textColor="@color/buttonClickedLightBlue" />


                    </LinearLayout>
                </LinearLayout>


                <View
                    android:padding="80dp"
                    android:id="@+id/line3"
                    android:layout_width="500dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="#c0c0c0"
                    android:clickable="false"
                    android:longClickable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/more_info"
                    android:id="@+id/more_less_info_text"
                    android:textColor="@android:color/white" />
                <ImageView
                    android:id="@+id/down_and_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down_button" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
